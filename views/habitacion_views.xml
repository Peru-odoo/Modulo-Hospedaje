<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View habitacion View Tree -->
    <record id="view_hotel_habitacion_tree" model="ir.ui.view">
        <field name="name">hotel.habitacion.tree</field>
        <field name="model">hotel.habitacion</field>
        <field name="arch" type="xml">
            <tree string="Habitaciones">
                <field name="name" />
                <field name="tipo" />
                <field name="capacidad" />
                <field name="precio_por_noche" />
                <field name="currency_id" invisible="1" />
                <field name="estado" widget="badge" decoration-success="estado=='disponible'"
                    decoration-danger="estado=='ocupada'" />
            </tree>
        </field>
    </record>

    <!-- View habitacion form -->
    <record id="view_hotel_habitacion_form" model="ir.ui.view">
        <field name="name">hotel.habitacion.form</field>
        <field name="model">hotel.habitacion</field>
        <field name="arch" type="xml">
            <form string="Habitaciones">
                <header>
                    <field name="estado" widget="statusbar" statusbar_visible="disponible,ocupada" />
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..." readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="numero" />
                            <field name="precio_por_noche" />
                        </group>
                        <group>
                            <field name="currency_id" invisible="1" />
                            <field name="tipo" />
                            <field name="capacidad" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- View habitacion search -->
    <record id="view_hotel_habitacion_search" model="ir.ui.view">
        <field name="name">hotel.habitacion.search</field>
        <field name="model">hotel.habitacion</field>
        <field name="arch" type="xml">
            <search string="Habitaciones">
                <field name="numero" />
                <filter name="filter_simple" string="Simple" domain="[('tipo', '=', 'simple')]" />
                <filter name="filter_doble" string="Doble" domain="[('tipo', '=', 'doble')]" />
                <filter name="filter_suite" string="Suite" domain="[('tipo', '=', 'suite')]" />
                <filter name="filter_jrsuite" string="Junior Suite"
                    domain="[('tipo', '=', 'jrsuite')]" />
                <separator />
                <filter name="filter_disponible" string="Disponible"
                    domain="[('estado', '=', 'disponible')]" />
                <filter name="filter_ocupada" string="Ocupada" domain="[('estado', '=', 'ocupada')]" />
                <group expand="0" string="Agrupar por...">
                    <filter name="group_by_tipo" string="Tipo de habitaci贸n"
                        context="{'group_by': 'tipo'}" />
                    <filter name="group_by_estado" string="Estado"
                        context="{'group_by': 'estado'}" />
                </group>
            </search>
        </field>
    </record>


    <record id="view_hotel_habitacion_kanban" model="ir.ui.view">
        <field name="name">hotel.habitacion.kanban</field>
        <field name="model">hotel.habitacion</field>
        <field name="arch" type="xml">
            <kanban string="Habitaciones">
                <field name="id" />
                <field name="name" />
                <field name="estado" />
                <field name="tipo" />
                <field name="currency_id" />
                <field name="precio_por_noche" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Habitaci贸n" class="o_image_64_contain"
                                    t-att-src="kanban_image('hotel.habitacion', 'image', record.id.raw_value)" />
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                        </strong>
                                    </div>
                                    <field name="estado" widget="label_selection"
                                        options="{'classes': {'ocupada': 'danger', 'disponible': 'success'}}" />
                                </div>
                                <div t-if="record.tipo.value">
                                    <t t-esc="record.tipo.value" />
                                </div>
                                <field name="precio_por_noche" widget="monetary"
                                    options="{'currency_field': 'currency_id', 'field_digits': True}" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Action habitacion -->
    <record id="action_habitacion" model="ir.actions.act_window">
        <field name="name">Habitaciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.habitacion</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hotel.view_hotel_habitacion_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontr贸 ninguna habitaci贸n
            </p>
        </field>
    </record>

</odoo>