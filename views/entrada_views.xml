<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View entrada View Tree -->
    <record id="view_hotel_entrada_tree" model="ir.ui.view">
        <field name="name">hotel.entrada.tree</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <tree string="Entradas" create="0" edit="0">
                <field name="name"/>
                <field name="reserva_id" />
                <field name="habitacion_id" />
                <field name="huespedes_ids" />
            </tree>
        </field>
    </record>

    <!-- View entrada form -->
    <record id="view_hotel_entrada_form" model="ir.ui.view">
        <field name="name">hotel.entrada.form</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <form string="Entradas">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reserva_id" />
                        </group>
                        <group>
                            <field name="habitacion_id" />
                        </group>
                        <label for="huespedes_ids" />
                        <field name="huespedes_ids" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- View entrada search -->
    <record id="view_hotel_entrada_search" model="ir.ui.view">
        <field name="name">hotel.entrada.search</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <search string="Entradas">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action entrada -->
    <record id="action_entrada" model="ir.actions.act_window">
        <field name="name">Entradas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.entrada</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hotel.view_hotel_entrada_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay entradas registradas
            </p>
        </field>
    </record>

    <menuitem
        id="hotel_entrada_menu"
        name="Entradas"
        action="action_entrada"
        parent="hotel_registro_menu"
        sequence="10" />

</odoo>
