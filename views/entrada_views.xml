<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View entrada View Tree -->
    <record id="view_hotel_entrada_tree" model="ir.ui.view">
        <field name="name">hotel.entrada.tree</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <tree string="Entradas" create="0" edit="0">
                <field name="name" />
                <field name="reserva_id" />
                <field name="habitacion_id" />
                <field name="create_date" string="Fecha de entrada" />
            </tree>
        </field>
    </record>

    <!-- View entrada form -->
    <record id="view_hotel_entrada_form" model="ir.ui.view">
        <field name="name">hotel.entrada.form</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <form string="Entradas">
                <header>
                    <button name="registrar_estancia" class="oe_highlight" string="Registrar Estancia"
                        type="object"
                        context="{'default_reserva_id': reserva_id, 'default_habitacion_id': habitacion_id, 'default_huespedes_ids': huespedes_ids}"
                        attrs="{'invisible': [('name', '=', 'Registrar Entrada')]}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reserva_id" />
                            <field name="habitacion_id" />
                        </group>
                        <group>
                            <label for="create_date" string="Fecha de entrada"
                                attrs="{'invisible': [('name', '=', 'Registrar Entrada')]}" />
                            <field name="create_date" nolabel="1"
                                attrs="{'invisible': [('name', '=', 'Registrar Entrada')]}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="pagina_huespedes" string="Huéspedes">
                            <field name="huespedes_ids"
                                attrs="{'readonly': [('name', '!=', 'Registrar Entrada')]}" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- View entrada search -->
    <record id="view_hotel_entrada_search" model="ir.ui.view">
        <field name="name">hotel.entrada.search</field>
        <field name="model">hotel.entrada</field>
        <field name="arch" type="xml">
            <search string="Entradas">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action entrada -->
    <record id="action_entrada" model="ir.actions.act_window">
        <field name="name">Entradas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.entrada</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hotel.view_hotel_entrada_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontró ninguna entrada
            </p>
        </field>
    </record>

</odoo>