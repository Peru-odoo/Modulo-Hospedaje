<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View reserva View Tree -->
    <record id="view_hotel_reservacion_tree" model="ir.ui.view">
        <field name="name">hotel.reservacion.tree</field>
        <field name="model">hotel.reservacion</field>
        <field name="arch" type="xml">
            <tree string="Reservaciones" edit="0">
                <field name="name" />
                <field name="cliente_id" />
                <field name="habitacion_id" />
                <field name="fecha_entrada" />
                <field name="fecha_salida" />
                <field name="cantidad_dias" />
            </tree>
        </field>
    </record>

    <!-- View reserva form -->
    <record id="view_hotel_reservacion_form" model="ir.ui.view">
        <field name="name">hotel.reservacion.form</field>
        <field name="model">hotel.reservacion</field>
        <field name="arch" type="xml">
            <form string="Reservaciones">
                <header>
                    <button name="registrar_entrada" class="oe_highlight" string="Registrar Entrada"
                        type="object"
                        context="{'default_reserva_id': id, 'default_habitacion_id': habitacion_id, 'default_huespedes_ids': (1, cliente_id)}"
                        attrs="{'invisible': [('name', '=', 'Nueva Reservación')]}" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cliente_id"
                                attrs="{'readonly': [('name', '!=', 'Nueva Reservación')]}" />
                            <field name="habitacion_id" options="{'no_create': True}"
                                attrs="{'readonly': [('name', '!=', 'Nueva Reservación')]}" />
                        </group>
                        <group>
                            <field name="fecha_entrada"
                                attrs="{'readonly': [('name', '!=', 'Nueva Reservación')]}" />
                            <field name="fecha_salida" />
                            <field name="cantidad_dias"
                                attrs="{'readonly': [('name', '!=', 'Nueva Reservación')]}" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- View reserva search -->
    <record id="view_hotel_reservacion_search" model="ir.ui.view">
        <field name="name">hotel.reservacion.search</field>
        <field name="model">hotel.reservacion</field>
        <field name="arch" type="xml">
            <search string="Reservaciones">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action reserva -->
    <record id="action_reservacion" model="ir.actions.act_window">
        <field name="name">Reservaciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.reservacion</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hotel.view_hotel_reservacion_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agregue una nueva reservación
            </p>
        </field>
    </record>

</odoo>