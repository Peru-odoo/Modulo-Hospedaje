<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View estancia View Tree -->
    <record id="view_hotel_estancia_tree" model="ir.ui.view">
        <field name="name">hotel.estancia.tree</field>
        <field name="model">hotel.estancia</field>
        <field name="arch" type="xml">
            <tree string="Estancias" create="0" edit="0">
                <field name="name" />
                <field name="reserva_id" />
                <field name="habitacion_id" />
                <field name="fecha_entrada" />
                <field name="fecha_salida" />
            </tree>
        </field>
    </record>

    <!-- View estancia form -->
    <record id="view_hotel_estancia_form" model="ir.ui.view">
        <field name="name">hotel.estancia.form</field>
        <field name="model">hotel.estancia</field>
        <field name="arch" type="xml">
            <form string="Estancias">
                <header>
                    <button name="registrar_salida" class="oe_highlight" string="Registrar Salida"
                        type="object"
                        context="{'default_estancia_id': id, 'default_habitacion_id': habitacion_id, 'default_huespedes_ids': huespedes_ids}"
                        attrs="{'invisible': ['|', ('name', '=', 'Registrar Estancia'), ('tiene_salida', '=', True)]}" />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archivada" bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                            <field name="tiene_salida" invisible="1" />
                            <field name="active" invisible="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reserva_id" />
                            <field name="habitacion_id" />
                        </group>
                        <group>
                            <field name="fecha_entrada" />
                            <field name="fecha_salida" />
                        </group>
                    </group>
                    <notebook>
                        <page name="pagina_huespedes" string="Huéspedes">
                            <field name="huespedes_ids" />
                        </page>
                        <page name="pagina_pedidos" string="Pedidos a la habitación"
                            attrs="{'invisible': [('name', '=', 'Registrar Estancia')]}">
                            <field name="pedidos_ids" domain="[('estancia_id', '=', id)]"
                                readonly="1" />
                            <button name="agregar_pedido" class="oe_highlight"
                                string="Agregar Pedido" type="object"
                                context="{'default_estancia_id': id}"
                                attrs="{'invisible': [('tiene_salida', '=', True)]}" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- View estancia search -->
    <record id="view_hotel_estancia_search" model="ir.ui.view">
        <field name="name">hotel.estancia.search</field>
        <field name="model">hotel.estancia</field>
        <field name="arch" type="xml">
            <search string="Estancia">
                <field name="name" />
                <field name="reserva_id" />
                <field name="habitacion_id" />
                <filter name="archived" string="Archivada" domain="[('active', '=', False)]" />
            </search>
        </field>
    </record>

    <!-- Action estancia -->
    <record id="action_estancia" model="ir.actions.act_window">
        <field name="name">Estancias</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.estancia</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hotel.view_hotel_estancia_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontró ninguna estancia
            </p>
        </field>
    </record>

</odoo>